@model DevFolio.Models.TblSkill
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yetenek Güncelleme Sayfası</h2>
<form method="post">
    <label>Yetenek Id</label>
    <input type="text" class="form-control" name="SkıllID" value="@Model.SkillID" />
    <br />
    <label>Yetenek Başlığı</label>
    <input type="text" class="form-control" name="SkıllTitle" value="@Model.SkillTitle" />
    <br />
    <label>Yetenek Değeri</label>
    <input type="text" class="form-control" name="SkıllValue" value="@Model.SkillValue" />
    <br />
    <button class="btn btn-warning">Yeteneği Güncelle</button>
</form>

